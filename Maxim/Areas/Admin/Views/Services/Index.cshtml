
@model List<Service>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Maxim table</h4>
            <a asp-action="Create" asp-controller="Service" class="btn btn-inverse-warning">Create Service</a>
            <div class="table-responsive pt-3">
                <table class="table table-maxim">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img style="width:150px;height:150px;" src="~/assets/img/icons/@item.Image" alt="" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Services" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="Delete" asp-controller="Services" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
